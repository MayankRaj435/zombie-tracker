generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(cuid())
  email              String    @unique
  password           String
  name               String?
  awsAccessKeyId     String? // Encrypted
  awsSecretAccessKey String? // Encrypted
  awsRegion          String?
  awsConnected       Boolean   @default(false)
  awsConnectedAt     DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  idleInstances   IdleInstance[]
  orphanedVolumes OrphanedVolume[]
  unattachedEips  UnattachedEIP[]
}

model IdleInstance {
  id                   String   @id @default(cuid())
  instanceId           String
  instanceType         String?
  reason               String
  estimatedMonthlyCost String?
  createdAt            DateTime @default(now())
  userId               String
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([instanceId, userId])
  @@index([userId])
}

model OrphanedVolume {
  id                   String   @id @default(cuid())
  volumeId             String
  sizeGb               Int?
  volumeType           String?
  reason               String
  estimatedMonthlyCost String?
  createdAt            DateTime @default(now())
  userId               String
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([volumeId, userId])
  @@index([userId])
}

model UnattachedEIP {
  id           String   @id @default(cuid())
  publicIp     String?
  allocationId String
  reason       String
  createdAt    DateTime @default(now())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([allocationId, userId])
  @@index([userId])
}
